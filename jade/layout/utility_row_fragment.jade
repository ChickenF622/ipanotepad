doctype xml
LinearLayout(xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/utility_row"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  )
  ImageButton(android:id="@+id/comment"
    style="@style/Keyboard"
    android:layout_marginLeft="-6dp"
    android:src="@drawable/ic_comment_white"
    )
  ImageButton(android:id="@+id/spacebar"
    android:layout_width="273dp"
    android:layout_height="@dimen/keyboard_button_dim"
    android:layout_marginLeft="-7dp"
    android:src="@drawable/ic_space_bar_white"
    )
  ImageButton(android:id="@+id/newline"
    style="@style/Keyboard"
    android:layout_marginLeft="-7dp"
    android:src="@drawable/ic_keyboard_return_white"
    )
